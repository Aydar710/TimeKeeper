<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.vk.LoginActivity">


    <ImageView
            android:id="@+id/img_login_app_icon"
            android:layout_width="266dp"
            android:layout_height="188dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_app" android:layout_marginTop="120dp"
            app:layout_constraintHorizontal_bias="0.495"/>

    <ImageView
            android:id="@+id/img_login_vk"
            android:layout_width="254dp"
            android:layout_height="128dp"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="56dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_login_vk" app:layout_constraintHorizontal_bias="0.684"/>


</android.support.constraint.ConstraintLayout>